{
    "name": "pentagonal/sso",
    "type": "project",
    "description": "Single Sign On Library",
    "keywords": ["sso", "single sign on", "pentagonal", "pentagonal/sso"],
    "license": "MIT",
    "authors": [
        {
            "name": "ArrayIterator",
            "email": "me@arrayiterator.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~8.2 || ~8.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pdo_mysql": "*",
        "ext-bcmath": "*",
        "firebase/php-jwt": "v6.10.0",
        "guzzlehttp/psr7": "^2.6.2",
        "monolog/monolog": "^2.9.0",
        "psr/container": "^1.1 || ^2.0",
        "psr/http-server-middleware": "^1.0.2",
        "league/container": "^4.2.2",
        "symfony/mailer": "^v7.0.4",
        "symfony/yaml": "^v7.0.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.9.0",
        "slevomat/coding-standard": "^8.15.0"
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Pentagonal\\Sso\\Core\\": "src/",
            "Pentagonal\\Sso\\App\\": "app/"
        },
        "psr-0": {
            "Pentagonal\\Sso\\Core\\": "src/",
            "Pentagonal\\Sso\\App\\": "app/"
        }
    }
}
